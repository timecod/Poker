#pragma once

#include "Card.h"
#include <vector>
#include <string>
class Player {
    std::string name;
    unsigned int coins;
    std::vector <Card *> cards;
    public:
    Player (char name []);
    void change_coins (int value);
    int check_coins ();
    int count_cards ();
    Card * get_card (int id);
    void set_cards (Card * cards []);
};
