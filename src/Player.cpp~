#include "Player.h"

Player::Player (char name []) {
    coins = 1000;
    for (char *ptr = &name[0]; *ptr > 0; ++ptr)
        this->name.append("" + (*ptr));
}
void Player::change_coins (int value) {
    if (coins + value < 0)
        throw "No coins";
    coins += value;
}
int Player::check_coins () { return coins; }
int Player::count_cards () { return cards.size(); }
Card * Player::get_card (int id) { return cards[id]; }

void Player::set_card (Card * cards []) { for (Card ** ptr = &cards[0]; *ptr > 0; ++ptr) this->cards.append(*ptr); }
