#include "Game.h"

Game::Game (Player * players []) {
	this->step = 0;
	for (Player ** ptr = &players[0]; *ptr > 0; ++ptr) this->players.append(*ptr);
	vector <int> numers_cards(52);
	for (int i = 0; i < 52; ++i) numers_cards[i] = i;
	int result_card;
	for (int i = 0; i < 5; ++i) {
		resoult_card = std::rand() % (52 - i);
		table[i] = new Card(numers_cards[resoult_card]);
		numers_cards.erase(numers_cards.begin() + resoult_cards);
	}
	while (step < players.length() * 3 + 2) this->update();
}

Game::~Game () {
	for (int i = 0; i < 5; ++i) delete table[i];
}

